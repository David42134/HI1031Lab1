CREATE DATABASE IF NOT EXISTS webshop;
USE webshop;

CREATE TABLE IF NOT EXISTS frukt(
id int AUTO_INCREMENT PRIMARY KEY,
price float(6,2),
title VARCHAR(100) not null,
descr varchar(100)
);



CREATE USER IF NOT EXISTS 'David'@'localhost' 
IDENTIFIED BY 'qwerty';
GRANT SELECT, INSERT, UPDATE, DELETE ON webshop.* TO 'David'@'localhost';


INSERT INTO frukt(price, title, descr) values (2.99, "Banan", "Gul frukt");
INSERT INTO frukt(price, title, descr) values (0.99, "Apple", "Röd frukt");
INSERT INTO frukt(price, title, descr) values (1.29, "Apple", "Grön frukt");
